<%- include ../layouts/cabezera.ejs %> 
        <br>
        <br>
        <a href="/libros/crear" class="btn btn-primary" type="button">Crear</a>
        <br><br>
        <table class="table table-striped table-inverse table-responsive">
            <thead class="thead-inverse">
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Imagen</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                    
                    <% for( let libro = 0; libro < libros.length; libro++ ) { %>
                        <tr>
                            <td scope="row"><%= libros[libro].id %> </td>
                            <td><%= libros[libro].nombre %></td>
                            <td>
                                <img src="images/<%= libros[libro].imagen %>" 
                                width="100"
                                class="img-thumbnail" alt="">
                                
                            </td>
                            <td>
                                <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                                    <form action="/libros/editar/<%= libros[libro].id %>" method="get" class="form-inline">
                                        <button type="submit"class="btn btn-success">Editar</button>
                                    </form>
                                </div> 
                                |
                                <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                                    <form action="/libros/eliminar/<%= libros[libro].id %>" method="post" class="form-inline">
                                        <button type="submit"class="btn btn-danger">eliminar</button>
                                    </form>
                                </div> 
                            </td>
                        </tr>
                    <% } %>
                    
                </tbody>
        </table>             
